<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/community_toolbar"
        android:layout_height="70dp"
        android:background="#037BF3"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/community_appbar_text"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="커뮤니티"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/community_toolbar" />

    <Button
        android:id="@+id/community_add_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="@+id/community_toolbar"
        app:layout_constraintStart_toEndOf="@+id/community_appbar_text"
        app:layout_constraintTop_toTopOf="@+id/community_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/community_recycleview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/community_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>