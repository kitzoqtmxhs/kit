<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="213dp"
        android:layout_height="159dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/baseline_lock_open_24" />

    <RelativeLayout
        android:id="@+id/lockLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="210dp">

        <Button
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonlock"
            android:text="@string/applockbtntext3"
            android:fontFamily="@font/yourfont"
            android:textColor="#1C1C1C"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/circleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageView4"
            app:srcCompat="@drawable/blue_circle"
            android:layout_width="285dp"
            android:layout_height="285dp"
            android:layout_centerInParent="true"
            android:alpha="1"
            android:contentDescription="@null"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adminLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="393dp">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/yourfont"
            android:text="앱 잠금이 실행중이지 않아요"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="550dp">

        <Button
            android:id="@+id/enableBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/yourfont"
            android:text="@string/applockbtntext1"
            android:textSize="19sp" />

        <Button
            android:id="@+id/disableBtn"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/yourfont"
            android:text="@string/applockbtntext2"
            android:textSize="19sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/community_toolbar_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="앱 잠금"
        android:fontFamily="@font/yourfont"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"
        android:background="#0066ff" />

    <TextView
        android:id="@+id/ApplocktextView3"
        android:layout_width="325dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="113dp"
        android:fontFamily="@font/yourfont"
        android:text="@string/applockda2"
        android:textSize="17sp" />
</RelativeLayout>
