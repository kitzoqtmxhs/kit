<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/community_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/blue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/community_toolbar_text"
        android:layout_width="match_parent"
        android:fontFamily="@font/yourfont"
        android:layout_height="70dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="공지사항"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/community_toolbar"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/notice_item_background">


        <TextView
            android:id="@+id/notice_detail_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/yourfont"

            android:paddingLeft="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notice_detail_writer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/yourfont"
            android:layout_marginLeft="350dp"
            android:textSize="20sp"
            android:layout_marginTop="55dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/notice_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:textSize="25sp"
            android:fontFamily="@font/yourfont"
            android:layout_marginBottom="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="90dp"
            android:textSize="15sp"
            android:fontFamily="@font/yourfont"
            android:background="@color/grey"
            android:text="TextView" />

    </RelativeLayout>


</FrameLayout>