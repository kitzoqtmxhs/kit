<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="65dp"
        tools:context=".MainActivity"


        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="213dp"
            android:layout_height="159dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/baseline_lock_open_24" />
        <RelativeLayout
            android:id="@+id/lockLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="210dp"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/buttonlock"
                android:text="@string/applockbtntext3"
                android:textStyle="bold"
                android:textColor="#1C1C1C"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circleLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            tools:context=".MainActivity">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="285dp"
                android:layout_height="285dp"
                android:layout_centerInParent="true"
                android:alpha="1"
                android:contentDescription="@null"
                android:visibility="visible"
                app:srcCompat="@drawable/blue_circle" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/adminLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="393dp"
            tools:context=".MainActivity">
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="앱 잠금이 실행중이지 않아요"
                android:textSize="27sp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/statusLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="550dp"
            tools:context=".MainActivity">
            <Button
                android:id="@+id/enableBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:text="@string/applockbtntext1"
                android:textSize="19sp"
                />

            <Button
                android:id="@+id/disableBtn"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_centerInParent="true"
                android:text="@string/applockbtntext2"

                android:textSize="19sp" />


        </RelativeLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/ApplocktextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="55dp"
        android:fontFamily="serif-monospace"
        android:text="@string/applockda"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538" />

    <TextView
        android:id="@+id/ApplocktextView3"
        android:layout_width="325dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="113dp"
        android:fontFamily="serif-monospace"
        android:text="@string/applockda2"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />








</androidx.constraintlayout.widget.ConstraintLayout>